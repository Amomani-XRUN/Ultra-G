#file name : my.KV
WindowManager :
    MainWindow:
    SecondWindow:

<MainWindow>:
    name : "main"  


        FloatLayout:
        cols:1
        
        size: root.width, root.height

       FloatLayout:
            cols:2
            
            

            Label:
                text: "Name: "
                color: 0.1,0.5,0.6,1

            TextInput:
                id:AhmadAdnan 
                multinline:False

            Label:
                text: "Email: "
                color: 0.1,0.5,0.6,1

            TextInput:
                id:hmoodmomani
                multiline:False

        Button:
            text:"Submit"
            on_release:

                app.root.current = "second" if AhmadAdnan.text == "Ahmad Adnan" else "main"
                app.root.current = "second" if hmoodmomani.text == "hmoodmomani@gmail.com" else "main"
                root.manager.transition.direction="left"
              

<SecondWindow>:
    name:"sec"
<Widgets>:
    Button:
        text: "help"
        on_release: root.btn()

<P>:
    Label:
        text: "You pressed the button"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

    Button:
        text: "You pressed the button"
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1, "y":0.1}
            Button:
              text: "Go Back"  
           on_release:
              app.root.current ="main"
               root.manager.transition.direction ="right"          
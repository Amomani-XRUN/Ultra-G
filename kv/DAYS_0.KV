<Days@GridLayout>:
	cols: 7
	size_hint: 1,.2
	canvas.before:
		Color:
			rgba: 0,0,0,1
		Rectangle:
			pos: self.pos
			size: self.size
	Label:
		text:'Mon'
		id: monday
		
	Label:
		text:'Tue'
		id:tue
	Label:
		text:'Wed'
		id:wed
	Label:
		text:'Thru'
		id:thru
	Label:
		text:'Fir'
		id:fir
	Label:
		text:'Sat'
		id:sat
	Label:
		text:'Sun'
		id:sun	